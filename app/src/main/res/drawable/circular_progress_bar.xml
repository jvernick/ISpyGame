<rotate
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="4000"
    android:fromDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="360">

    <shape
        android:innerRadiusRatio="3"
        android:shape="ring"
        android:thicknessRatio="7.0"
        android:useLevel="false">

        <gradient
            android:centerColor="@color/circle_center"
            android:endColor="@color/circle_end"
            android:startColor="@color/circle_start"
            android:angle="0"
            android:centerY="0.5"
            android:type="sweep"
            android:useLevel="false" />
    </shape>
</rotate>