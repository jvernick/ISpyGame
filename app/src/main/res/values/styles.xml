<?xml version="1.0" encoding="utf-8" ?>
<resources>
    <!-- Base application theme. TODO update -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- customize the color palette -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <!-- Toolbar theme-->
    <style name="ActionBarTheme" parent="Theme.AppCompat">
        <item name="android:textCursorDrawable">?android:attr/hint</item>
        <item name="android:textColorPrimary">@color/grey_100</item>
        <item name="actionButtonStyle">@style/ActionButtonStyle</item>
        <item name="homeAsUpIndicator">@drawable/ic_chevron_left</item>
        <item name="selectableItemBackground">?android:selectableItemBackground</item>
        <item name="selectableItemBackgroundBorderless">?android:selectableItemBackground</item>
    </style>

    <!-- Toolbar button theme -->
    <style name="ActionButtonStyle" parent="@android:style/Widget.Holo.Light.ActionButton">
        <item name="android:minWidth">0dip</item>
        <item name="android:paddingLeft">0dip</item>
        <item name="android:paddingRight">0dip</item>
        <item name="android:layout_marginRight">10dip</item>
    </style>

    <!--theme for texts used during login/signup-->
    <style name="login_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:maxLines">1</item>
    </style>


    <!--
    Style for dividers
    -->
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <!--theme for total score number-->
    <style name="total_score_number">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:text">@string/score</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">40sp</item>
    </style>

    <!--theme for total score text-->
    <style name="total_score_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>

        <item name="android:layout_weight">1</item>
    </style>

    <!-- theme for score headings-->
    <style name="score_headings" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@color/accent</item>
        <item name="android:textColor">@color/secondary_text_default_material_dark</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- theme for login/register titles-->
    <style name="login_and_register_title" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="create_challenge" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:windowIsTranslucent">true</item>
    </style>



</resources>
