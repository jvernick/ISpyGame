<?xml version="1.0" encoding="utf-8" ?>
<resources>
    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- customize the color palette -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <!-- Customize theme here. -->
    <style name="LoginTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">@color/accent_light</item>
        <item name="colorControlHighlight">@color/accent_light</item>
    </style>

    <!-- Toolbar theme-->
    <style name="ActionBarTheme" parent="Theme.AppCompat">
        <item name="android:textCursorDrawable">?android:attr/hint</item>
        <item name="android:textColorPrimary">@color/grey_100</item>
        <item name="actionButtonStyle">@style/ActionButtonStyle</item>
        <item name="maxButtonHeight">8dp</item>
        <item name="homeAsUpIndicator">@drawable/ic_chevron_left</item>
        <item name="selectableItemBackground">?android:selectableItemBackground</item>
        <item name="selectableItemBackgroundBorderless">?android:selectableItemBackground</item>
    </style>

    <!-- Toolbar button theme -->
    <style name="ActionButtonStyle" parent="@android:style/Widget.Holo.Light.ActionButton">
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <!--theme for texts used during login/signup-->
    <style name="login_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:theme">@style/LoginTheme</item>
    </style>

    <!--
    Style for dividers
    -->
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <!--theme for total score number-->
    <style name="total_score_number">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/score</item>
        <item name="android:padding">2dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <!--theme for total score text-->
    <style name="total_score_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:padding">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <!-- theme for score headings-->
    <style name="score_headings">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">4dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <!-- theme for login/register titles-->
    <style name="login_and_register_titles">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- theme for ConfigureChallenge textViews -->
    <style name="configure_challenge_textViews">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textSize">24sp</item>
    </style>

    <!-- Theme for friend name in friend lists -->
    <style name="friend_name">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <!-- Theme for friend icon in friend lists -->
    <style name="friend_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:padding">4dp</item>
        <item name="android:src">@drawable/ic_friend</item>
        <item name="android:background">@drawable/bg_friend_icon_circle</item>
    </style>

    <!-- Theme for all progress spinners-->
    <style name="progressSpinner">
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:progressDrawable">@drawable/circular_progress_bar</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="create_challenge" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!-- Radio button style -->
    <style name="radio_button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_radio_btn</item>
        <item name="android:button">@drawable/selector_null</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--ViewChallenge: drawer text-->
    <style name="drawer_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:ellipsize">end</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">@color/grey_300</item>
        <item name="android:drawableLeft">@drawable/drawer_border</item>
        <item name="android:drawableRight">@drawable/drawer_border</item>
    </style>

    <!--ViewChallenge: game info text-->
    <style name="game_info_text">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:visibility">invisible</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <!--empty challenge view style-->
    <style name="empty_challenge_view" parent="empty_views">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:drawableTop">@drawable/ic_empty_challenge_bg</item>
    </style>

    <!--empty friend view style-->
    <style name="empty_friend_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:drawableTop">@drawable/ic_friend_empty</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:padding">4dp</item>
    </style>

    <!--empty views style-->
    <style name="empty_views">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_margin">16dp</item>
    </style>


</resources>
