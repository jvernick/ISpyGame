<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <EditText
        android:id="@+id/username_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/bar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="start|center_vertical"
        android:layout_margin="4dp"
        android:background="@drawable/search_field_style"
        android:hint="@string/edt_search_hint"
        android:inputType="text"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="110dp"
        android:paddingTop="16dp"
        android:singleLine="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/primary_text"/>

    <Button
        android:id="@+id/btn_add_friend"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_above="@id/bar"
        android:layout_alignBottom="@id/username_field"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/username_field"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/selector_friend_add_btn"
        android:gravity="center"
        android:text="@string/btn_search"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/white"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="4dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:padding="4dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/secondary_text"/>

    <ProgressBar
        android:id="@+id/challenges_progressBar"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/message"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"/>
</RelativeLayout>