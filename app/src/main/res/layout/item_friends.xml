<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="4dp">

    <ImageView
        android:id="@+id/friend_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:padding="4dp"
        android:src="@drawable/ic_friend"
        android:background="@drawable/bg_friend_icon_circle" />

    <ImageView
        android:id="@+id/game_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:padding="4dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/ic_new_game" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_toRightOf="@id/friend_icon"
        android:layout_toEndOf="@+id/friend_icon"
        android:layout_alignTop="@+id/friend_icon"
        android:layout_toLeftOf="@id/game_start"
        android:layout_toStartOf="@id/game_start"
        android:layout_alignBottom="@+id/friend_icon"
        android:layout_marginLeft="8dp"
        android:id="@+id/friend_username"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/primary_text"
        android:gravity="center_vertical"
        android:padding="8dp"/>
</RelativeLayout>