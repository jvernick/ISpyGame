<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/friendReqFragment"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.picspy.views.fragments.FriendRequestsFragment">

    <ProgressBar
        android:id="@+id/challenges_progressBar"
        style="?android:attr/progressBarStyleSmall"
        android:layout_marginTop="72dp"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:progressDrawable="@drawable/circular_progress_bar"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/my_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:scrollbars="vertical" />

    <TextView
        android:id="@+id/empty_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="16dp"
        android:layout_margin="16dp"
        android:gravity="center"
        android:drawableTop="@drawable/ic_empty_add_friend"
        android:layout_gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/primary_text"
        android:text="@string/tx_empty_list"/>
</RelativeLayout>
