<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.Toolbar android:id="@+id/myToolbar"
                                   xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   android:layout_width="match_parent"
                                   android:layout_height="?android:actionBarSize"
                                   android:background="@color/primary"
                                   android:theme="@style/ActionBarThemeDark"
                                   app:navigationIcon="@drawable/ic_chevron_left_white"
                                   app:theme="@style/ActionBarThemeDark"
                                   app:titleTextAppearance="?android:attr/textAppearanceLarge">

    <TextView
        android:id="@+id/toolbar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/primary_text_default_material_dark"/>
</android.support.v7.widget.Toolbar>