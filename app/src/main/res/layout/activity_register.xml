<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="amc.myfirstapp.RegisterActivity">

    <TextView
        android:id="@+id/title_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp"
        android:text="@string/loginPrompt"
        android:textSize="30sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edit_display_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_message"
        android:layout_marginTop="15dp"
        android:hint="@string/display_name_hint"
        android:inputType="text"
        android:minHeight="40dp"
        android:maxLines="1" />

    <EditText
        android:id="@+id/edit_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_display_name"
        android:layout_marginTop="15dp"
        android:hint="@string/email_hint"
        android:inputType="text"
        android:minHeight="40dp"
        android:maxLines="1" />

    <EditText
        android:id="@+id/edit_password1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_email"
        android:layout_marginTop="15dp"
        android:hint="@string/pass_hint1"
        android:inputType="textPassword"
        android:minHeight="40dp"
        android:maxLines="1" />

    <EditText
        android:id="@+id/edit_password2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_password1"
        android:layout_marginTop="15dp"
        android:hint="@string/pass_hint2"
        android:inputType="textPassword"
        android:minHeight="40dp"
        android:maxLines="1" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_password2"
        android:layout_marginTop="15dp"
        android:text="@string/submit_sign_up"
        android:onClick="signUp"/>
</RelativeLayout>
