<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/view_drawing_pad"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">
        <ImageButton
            android:id="@+id/brush_colors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxHeight="50dp"
            android:maxWidth="50dp"
            android:src="@drawable/color_palette"
            android:scaleType="fitCenter"
            android:padding="0dp"
            android:background="@android:color/transparent"
            android:adjustViewBounds="true"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/brush_thickness_button"
            android:onClick="changeBrushThickness">

            <ImageView
                android:id="@+id/small_thickness"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:scaleType="fitCenter"
                android:padding="0dp"
                android:src="@drawable/round_button"
                android:adjustViewBounds="true" />

            <ImageView
                android:id="@+id/medium_thickness"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="fitCenter"
                android:padding="0dp"
                android:src="@drawable/round_button"
                android:adjustViewBounds="true" />

            <ImageView
                android:id="@+id/large_thickness"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="fitCenter"
                android:padding="0dp"
                android:src="@drawable/round_button"
                android:adjustViewBounds="true" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/undo_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxHeight="80dp"
            android:maxWidth="80dp"
            android:src="@drawable/back_arrow"
            android:scaleType="fitCenter"
            android:padding="0dp"
            android:background="@android:color/transparent"
            android:adjustViewBounds="true" />

    </LinearLayout>


</RelativeLayout>