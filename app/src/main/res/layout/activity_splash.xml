<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/primary_dark"
                tools:context="com.picspy.views.Splash_Activity">

    <RelativeLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/primary"
        android:minHeight="48dp"
        android:visibility="gone">

        <View
            android:id="@+id/buttons_divider"
            android:layout_width="1px"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:background="@color/white"/>

        <Button
            android:id="@+id/splash_login"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_gravity="left"
            android:layout_toLeftOf="@id/buttons_divider"
            android:background="@drawable/selector_login_btn"
            android:onClick="splashLogin"
            android:text="@string/tx_login"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/primary_text_default_material_dark"
            android:textStyle="bold"
            android:visibility="gone"/>

        <Button
            android:id="@+id/splash_signup"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_gravity="right"
            android:layout_toRightOf="@id/buttons_divider"
            android:background="@drawable/selector_login_btn"
            android:onClick="splashSignUp"
            android:text="@string/tx_signup"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/primary_text_default_material_dark"
            android:textStyle="bold"
            android:visibility="gone"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/buttons"
        android:orientation="vertical"
        android:weightSum="10">

        <TextView
            android:id="@+id/appName"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="4"
            android:gravity="bottom"
            android:padding="4dp"
            android:text="@string/app_name"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/grey_100"
            android:textSize="48sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/splash_progressSpinner"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_above="@id/bar"
        android:layout_below="@id/challenge_list"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:progressDrawable="@drawable/circular_progress_bar"
        android:visibility="gone"/>
</RelativeLayout>