<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.picspy.views.Splash_Activity"
    android:layout_height="match_parent"
    android:background="@color/primary"
    android:layout_width="match_parent">


    <!--- TODO add & configure splash image below and background above
    <ImageView
        android:id="@+id/splashImage"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
          TODO To add logo
        android:src="@drawable/Logo.txt"/> -->


    <RelativeLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:minHeight="48dp"
        android:layout_marginBottom="5dp"
        android:layout_alignParentBottom="true"
        style="?android:attr/buttonBarStyle"
        android:background="@color/primary"
        android:visibility="gone">

        <View
            android:id="@+id/ViewColorPickerHelper"
            android:layout_width="1px"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:background="@color/white"
            android:layout_centerHorizontal="true"/>

        <!-- TODO change button pressed state and background? -->
        <Button
            android:id="@+id/splash_login"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_gravity="left"
            android:text="@string/tx_login"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/primary_text_dark"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/ViewColorPickerHelper"
            android:background="?android:attr/selectableItemBackground"
            android:onClick="splashLogin"
            android:visibility="gone"/>

        <Button
            style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/splash_signup"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_gravity="right"
            android:text="@string/tx_signup"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/primary_text_dark"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/ViewColorPickerHelper"
            android:background="?android:attr/selectableItemBackground"
            android:onClick="splashSignUp"
            android:visibility="gone"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_above="@id/buttons"
        android:weightSum="10">

        <TextView
            android:id="@+id/appName"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="@string/app_name"
            android:textColor="@color/grey_100"
            android:gravity="bottom"
            android:layout_gravity="center_horizontal"
            android:padding="4dp"
            android:textSize="48sp"
            android:layout_weight="4"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- TODO modify location-->
    <ProgressBar
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:id="@+id/splash_progressSpinner"
        android:layout_below="@id/challenge_list"
        android:layout_above="@id/bar"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:progressDrawable="@drawable/circular_progress_bar"
        android:visibility="gone"/>
</RelativeLayout>