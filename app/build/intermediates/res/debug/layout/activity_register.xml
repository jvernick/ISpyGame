<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:fillViewport="true" >
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:context="amc.myfirstapp.RegisterActivity">

        <!--TODO add facebook signup here-->
        <TextView
            style="@style/login_and_register_title"
            android:id="@+id/register_title"
            android:text="@string/register_title"/>
        <!--com.facebook.login.widget.LoginButton
            style="@style/login_text_style"
            android:id="@+id/facebook_login_button"
            android:layout_marginTop="20dp"
            android:layout_below="@id/register_title"/-->
        <EditText
            style="@style/login_text_style"
            android:id="@+id/edit_display_name"
            android:layout_marginTop="20dp"
            android:layout_below="@id/register_title"
            android:hint="@string/display_name_hint"
            android:inputType="text"/>
        <EditText
            style="@style/login_text_style"
            android:id="@+id/edit_email"
            android:layout_below="@id/edit_display_name"
            android:hint="@string/email_hint"
            android:inputType="textEmailAddress" />
        <EditText
            style="@style/login_text_style"
            android:id="@+id/edit_password1"
            android:layout_below="@id/edit_email"
            android:hint="@string/pass_hint1"
            android:inputType="textPassword" />
        <EditText
            style="@style/login_text_style"
            android:id="@+id/edit_password2"
            android:layout_below="@id/edit_password1"
            android:hint="@string/pass_hint2"
            android:inputType="textPassword"/>
        <Button
            style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/signup_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:layout_alignParentBottom="true"
            android:textColor="@color/primary_text_default_material_dark"
            android:textStyle="bold"
            android:text="@string/submit_sign_up"
            android:onClick="signUp"
            android:background="@color/primary"/>
    </RelativeLayout>
</ScrollView><!-- From: file:/C:/Users/BrunelAmC/Documents/projects/Picspy/Ispygame/app/src/main/res/layout/activity_register.xml -->